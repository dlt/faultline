<% if notice.present? %>
  <div class="mb-6 rounded-xl bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-200 dark:border-emerald-800 p-4">
    <div class="flex items-center gap-3">
      <span class="material-symbols-outlined text-emerald-500">check_circle</span>
      <p class="text-sm font-medium text-emerald-800 dark:text-emerald-200"><%= notice %></p>
    </div>
  </div>
<% end %>

<% if alert.present? %>
  <div class="mb-6 rounded-xl bg-rose-50 dark:bg-rose-900/20 border border-rose-200 dark:border-rose-800 p-4">
    <div class="flex items-center gap-3">
      <span class="material-symbols-outlined text-rose-500">error</span>
      <p class="text-sm font-medium text-rose-800 dark:text-rose-200"><%= alert %></p>
    </div>
  </div>
<% end %>
